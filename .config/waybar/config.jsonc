[
  { // Primary monitor
    // ------------------------------------------------------------------------
    "output": "DP-1",
    "name": "center",
    "spacing": 0,
    "include": [
      "~/.config/waybar/modules.jsonc"
    ],
    "fixed-center": true,
    "modules-center": [
      "clock",
      "custom/notification"
    ],
    "modules-left": [
      "custom/app-menu-left",
      "hyprland/workspaces",
      "custom/divider",
      "hyprland/window"
    ],
    "modules-right": [
      "hyprland/submap",
      "gamemode",
      "systemd-failed-units",
      "privacy",
      "keyboard-state",
      "hyprland/language",
      "idle_inhibitor",
      "pulseaudio#input",
      "group/audio-output",
      "cpu",
      "memory",
      "temperature",
      "group/tray",
      "custom/settings-menu-right"
    ]
  },
  { // Wall monitor
    // ------------------------------------------------------------------------
    "output": "HDMI-A-1",
    "name": "wall",
    "spacing": 0,
    "position": "bottom",
    "include": [
      "~/.config/waybar/modules.jsonc"
    ],
    "fixed-center": true,
    "modules-center": [
      "clock"
    ],
    "modules-left": [
      "hyprland/workspaces",
      "custom/divider",
      "hyprland/window"
    ],
    "modules-right": [
      "hyprland/submap"
    ]
  }
]

