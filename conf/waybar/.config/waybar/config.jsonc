[
// Primary {{{
  {
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    // "height": 10, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    // "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    // "modules-center": [
    //   "sway/window"
    // ],
    "output": "DP-3",
    "name": "primary",
    "include": [
      "~/.config/waybar/shared-modules.jsonc"
    ],
    "modules-center": [
      "clock"
    ],
    "group/indicators": {
      "orientation": "horizontal",
      "modules": [
        "keyboard-state",
        "hyprland/language",
        "privacy",
        "idle_inhibitor",
        "custom/notification"
      ]
    },
    "group/audio": {
      "orientation": "horizontal",
      "modules": [
        "pulseaudio#output",
        "pulseaudio/slider",
        "pulseaudio#input"
      ]
    },
    "group/meters": {
      "orientation": "horizontal",
      "modules": [
        "cpu",
        "memory",
        "temperature"
      ]
    },
    "modules-left": [
      "custom/rofi",
      "hyprland/workspaces",
      "hyprland/submap",
      "hyprland/window"
      // "custom/media",
      // "sway/scratchpad"
    ],
    "modules-right": [
      "group/indicators",
      "group/audio",
      "group/meters"
      // "network",
      // "custom/updates",
      // "custom/power"
    ],
    // Modules configuration
    "keyboard-state": {
      "capslock": true,
      "format": "{icon}",
      "format-icons": {
        "locked": "Û∞åé",
        "unlocked": "Ó´å"
      }
    },
    "custom/rofi": {
      "format": "ÔÉà",
      "on-click": "rofi -show combi -show-icons"
    },
    "hyprland/submap": {
      "format": " ÔÄì  {} "
    },

    "hyprland/language": {
      "format-en": "ÔÑú",
      "format-no": "<span color=\"#FBB829\">Û∞åè</span>",
      "on-click": "hyprctl switchxkblayout keychron-keychron-q6 next"
    },
    "sway/scratchpad": {
      "format": "{icon} {count}",
      "show-empty": false,
      "format-icons": ["", "Ôãí "],
      "tooltip": true,
      "tooltip-format": "{app}: {title}"
    },
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": "ÔÅÆ",
        "deactivated": "ÔÅ∞"
      }
    },
    "clock": {
        // "timezone": "America/New_York",
        // "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%H:%M}",
        "tooltip": false,
        "format-alt": "Ôëï {:%A %d. %B %Y  ÔÄó %H:%M}"
    },
    "cpu": {
      "interval": 1,
      "format": "{icon}",
      "rotate": 270,
      "format-icons": ["Û∞ù¶","Û∞™û","Û∞™ü","Û∞™†","Û∞™°","Û∞™¢","Û∞™£","Û∞™§","Û∞™•"]
    },
    "memory": {
      "interval": 1,
      "rotate": 270,
      "format": "{icon}",
      "format-icons": ["Û∞ù¶","Û∞™û","Û∞™ü","Û∞™†","Û∞™°","Û∞™¢","Û∞™£","Û∞™§","Û∞™•"],
      "max-length": 10
    },
    "temperature": {
      "thermal-zone": 2,
      "format-critical": "{icon}",
      "interval": 1,
      "rotate": 270,
      "critical-threshold": 90,
      "format": "{icon}",
      "format-icons": ["Û∞ù¶","Û∞™û","Û∞™ü","Û∞™†","Û∞™°","Û∞™¢","Û∞™£","Û∞™§","Û∞™•"]
    },
    "network": {
        // "tooltip-format": "{ipaddr}/{cidr} Ôûñ",
        // "format-linked": "{ifname} (No IP) Ôûñ",
        // "format-disconnected": "Disconnected ‚ö†",
        // "format-alt": "Û∞õ≥  {ifname}: {ipaddr}/{cidr}"
        "interface": "tun0",
        "format-ethernet": "Û∞±ì VPN",
        "format-disconnected": "Û∞Öõ VPN",
        "tooltip-format": "Û∞õ≥  {ifname}: {ipaddr}/{cidr}",
        "tooltip-format-disconnected": "Disconnected ‚ö†"
    },

    "pulseaudio#input": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "on-click": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
        "on-click-right": "pavucontrol"

    },
    "pulseaudio#output": {
        "format": "{icon}",
        "format-muted": "Ôö© ",
        "format-source": "ÔÑ∞",
        "format-icons": {
          "headset": "Ôñê" ,
          "default": "Û∞ìÉ"
        },
        "on-click": "~/scripts/toggle-sinks.sh 'alsa_output.usb-SteelSeries_SteelSeries_Arctis_7-00.stereo-game' 'alsa_output.pci-0000_00_1b.0.analog-stereo'",
        "on-click-right": "pavucontrol",
        "on-click-middle": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"

    },
    "pulseaudio/slider": {
      "min": 0,
      "max": 100,
      "orientation": "horizontal"
    },
    "custom/media": {
      "format": "{icon} {}",
      "return-type": "json",
      "max-length": 40,
      "format-icons": {
        "spotify": "ÔÜº",
        "default": "üéú"
      },
      "escape": true,
      // "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
      "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "privacy": {
      "icon-spacing": 4,
      "icon-size": 18,
      "transition-duration": 250,
      "modules": [
        {
          "type": "screenshare",
          "tooltip": true,
          "tooltip-icon-size": 24
        },
        {
          "type": "audio-out",
          "tooltip": true,
          "tooltip-icon-size": 24
        },
        {
          "type": "audio-in",
          "tooltip": true,
          "tooltip-icon-size": 18
        }
      ]
    },
    "custom/updates": {
      "format": "{icon} {}",
      "return-type": "json",
      "format-icons": {
        "has-updates": "Û±ç∑ ",
        "updated": "Û∞Ç™ "
      }
      // "exec-if": "which waybar-module-pacman-updates",
      // "exec": "waybar-module-pacman-updates --interval-seconds 5 --network-interval-seconds 300"
    },
    "custom/notification": {
      "tooltip": false,
      "format": "{icon}",
      "format-icons": {
        "notification": "ÔÇ¢<span foreground='#EF2F27'><sup>ÔëÑ</sup></span>",
        "none": "ÔÇ¢",
        "dnd-notification": "Ôá∑<span foreground='#EF2F27'><sup>ÔëÑ</sup></span>",
        "dnd-none": "Ôá∑",
        "inhibited-notification": "ÔÇ¢<span foreground='#EF2F27'><sup>ÔëÑ</sup></span>",
        "inhibited-none": "ÔÇ¢",
        "dnd-inhibited-notification": "Ôá∑<span foreground='#EF2F27'><sup>ÔëÑ</sup></span>",
        "dnd-inhibited-none": "Ôá∑"
      },
      "return-type": "json",
      "exec-if": "which swaync-client",
      "exec": "swaync-client -swb",
      "on-click": "swaync-client -t -sw",
      "on-click-right": "swaync-client -d -sw",
      "escape": true
    }
  },
  // }}}
  // Secondary {{{
  {
    "output": "DP-1",
    "name": "secondary",
    "height": 24,
    "include": [
      "~/.config/waybar/shared-modules.jsonc"
    ],
    "modules-left": [
      "tray",
      "hyprland/workspaces",
      "hyprland/window"
    ],
    "modules-right": [
      "custom/power"
    ]
  },
  // }}}
  // Tertiary {{{
  {
    "output": "DP-2",
    "name": "tertiary",
    "include": [
      "~/.config/waybar/shared-modules.jsonc"
    ],
    "modules-right": [
      "hyprland/workspaces"
    ],
    "modules-center": [
      "hyprland/window"
    ]
  },
  // }}}
  // Quaternary {{{
  {
    "output": "HDMI-A-1",
    "name": "quaternary",
    "height": 30,
    "position": "bottom",
    "include": [
      "~/.config/waybar/shared-modules.jsonc"
    ],
    "modules-left": [
      "hyprland/workspaces",
      "hyprland/window"
    ],
    "modules-right": [
      "clock"
    ]
  }
  // }}}
]

